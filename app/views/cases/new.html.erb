<div class="needBlood">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-4 col-md-offset-4">
        <div class="panel panel-default">
          <div class="panel-heading text-center">I NEED BLOOD</div>
          <div class="panel-body">
            <%= form_for @case do |f| %>
            <%= render 'shared/error_messages', record: @case %>
            <div class="input-group">
              <span class="input-group-addon" for="case_name">Name</span>
              <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="input-group">
              <span class="input-group-addon" for="case_email">EMAIL</span>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="input-group">
              <span class="input-group-addon" for="case_telephone">TELEPHONE</span>
              <%= f.text_field :telephone, class: 'form-control' %>
            </div>
            <div class="input-group">
              <span class="input-group-addon" for="case_hospital">HOSPITAL</span>
              <%= f.text_field :hospital, class: 'form-control' %>
            </div>
            <div class="input-group">
              <span class="input-group-addon" for="case_blood_type_id">BLOOD TYPE</span>
              <%= f.collection_select :blood_type_id, @blood_types, :id, :name, {prompt: 'Select blood type'}, class: 'form-control' %>
            </div>
            <div class="input-group text-center">
              <%= f.submit 'SUBMIT', class: 'btn', id: 'create_case' %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
