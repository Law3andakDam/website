<div class="needBlood">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-4 col-md-offset-4">
        <div class="panel panel-default">
          <div class="panel-heading text-center">I'M A DONOR</div>
          <div class="panel-body">
            <%= form_for @doner do |f| %>
            <%= render 'shared/error_messages', record: @doner %>

            <div class="input-group">
              <span class="input-group-addon" for="doner_email">EMAIL</span>
              <%= f.text_field :email, class: 'form-control' %>
            </div>
            <div class="input-group">
              <span class="input-group-addon" for="doner_mobile">TELEPHONE</span>
              <%= f.text_field :mobile, class: 'form-control' %>
            </div>
            <div class="input-group">
              <span class="input-group-addon" for="doner_blood_type_id">BLOOD TYPE</span>
              <%= f.collection_select :blood_type_id, @blood_types, :id, :name, {prompt: 'Select blood type'}, class: 'form-control' %>
            </div>
            <div class="input-group">
              <input type="checkbox" id="agree_to_terms">
              <label for="agree_to_terms">I agree to terms and conditions</label>
            </div>
            <div class="input-group text-center">
              <%= f.submit 'SUBMIT', class: 'btn', id: 'create_doner' %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
